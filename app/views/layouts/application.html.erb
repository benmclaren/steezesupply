  <body data-controller="mobile-menu" data-mobile-menu-target="body">
    <div>
      <header class="px-4 lg:px-8">
        <%= render "shared/navbar" %>
      </header>
      <%= render "shared/mobile-nav" %>
    </div>
    <div class="">
      <%= yield %>
    </div>
  </body>
</html>
